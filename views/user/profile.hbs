
  
  <div class="row">
    <div class="col-md-8 offset-md-2" id="body-container">

      User Profile For: {{user.username}} <hr>

      {{#if user.postss}}

        postss That "{{user.username}}" Suggested: <br>

        {{#each user.postss}}
          <a href="/posts/{{this._id}}" style="text-decoration: none;">&nbsp; &nbsp; &bull; &nbsp;{{this.name}}</a><br>
        {{/each}}
      
      {{/if}}

      {{#if user.comments}}

        <br>Comments By "{{user.username}}": <br>

        {{#each user.comments}}
          <a href="/posts/{{this.posts}}/comment/{{this._id}}" style="text-decoration: none;">&nbsp; &nbsp; &bull; &nbsp;{{this.body}}</a><br>
        {{/each}}
      
      {{/if}}

      {{#if user.likes}}

        <br>postss That "{{user.username}}" Liked: <br>

        {{#each user.likes}}
          <a href="/posts/{{this.posts._id}}" style="text-decoration: none;">&nbsp; &nbsp; &bull; &nbsp;{{this.posts.name}}</a><br>
        {{/each}}
      
      {{/if}}
    </div> 
  </div>