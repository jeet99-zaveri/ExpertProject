{{> visitorHeader }}

<div class="row mt-5">
    <div class="col-md-9 offset-md-2" id="body-container">
        <br><br><br>
        <!-- ============================================================== -->
        <!-- pageheader  -->
        <!-- ============================================================== -->

        <div class="page-header">
            <h2 class="pageheader-title">Manage Faculties </h2>
            {{!-- <div class="page-breadcrumb"> --}}
            <hr>
            <nav class="bread" aria-label="breadcrumb">
                <ol class="breadcrumb bread">
                    <li class="breadcrumb-item" aria-current="page"><a href="/" class="breadcrumb-link">Dashboard</a>
                    <li class="breadcrumb-item" aria-current="page"><a href="/mngFaculty" class="breadcrumb-link">Manage
                            Faculties </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="/viewFaculty"
                            class="breadcrumb-link">View
                            Faculties</a></li>
                </ol>
            </nav>
            {{!-- </div> --}}
        </div>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h3><a class="btn btn-secondary" href="/mngFaculty"><i class="fa fa-plus"></i>&nbsp; Create
                        New</a> &nbsp;Faculty
                    List</h3>
                <table id="userdata"
                    class="table table-responsive responsive table-striped table-bordered table-hover table-condensed"
                    style="width:100%; background-color: mintcream;">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Designation</th>
                            <th>Salary</th>
                            <th>Joining Date</th>
                            <th>Email ID</th>
                            <th>Contact No</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <td>{{this.firstName}}</td>
                            <td>{{this.middleName}}</td>
                            <td>{{this.lastName}}</td>
                            <td>{{this.dob}}</td>
                            <td>{{this.gender}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.designation}}</td>
                            <td>{{this.salary}}</td>
                            <td>{{this.joiningDate}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.contactNo}}</td>
                            <td>
                                <a href="mngFaculty/{{this._id}}"><i class="fa fa-pencil fa-lg"
                                        aria-hidden="true"></i></a>&nbsp;
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{> footer }}